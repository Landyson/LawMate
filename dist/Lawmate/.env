# --- Lawmate configuration ---
# Choose provider: openai | ollama | mock
LLM_PROVIDER=ollama

# OpenAI (only if LLM_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Ollama (only if LLM_PROVIDER=ollama)
# --- Cloud (no model download on your PC) ---
OLLAMA_BASE_URL=https://ollama.com/api
OLLAMA_API_KEY=fe66dfe1e24d41ad9724dc3025098ab9.W3inUgQloKgy6C5UViA9WIh3
# Pick any model available on Ollama Cloud (examples: gpt-oss:20b, deepseek-v3.1:671b, qwen3:30b)
OLLAMA_MODEL=gpt-oss:20b

# --- Local (if you want to run models on your PC instead) ---
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_API_KEY=
# OLLAMA_MODEL=qwen3:8b

# RAG / sources settings
# How many days of fresh court decisions to scan (0 disables)
JUSTICE_LOOKBACK_DAYS=14
# Max decisions per day to scan (for speed)
JUSTICE_MAX_ITEMS_PER_DAY=200
